    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_frag_stat_player_PC"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cl_stat_main"
        app:layout_constraintBottom_toTopOf="@id/cl_frag_stat_game_1_1"
        android:background="@drawable/gradient_ll_player_pc"
        >

            <TextView
                android:id="@+id/toje_tv_hz"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/stat_game_player_pc"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/cl_frag_stat_player_PC"
                app:layout_constraintBottom_toTopOf="@id/hz"
                />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/hz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/toje_tv_hz"
                                app:layout_constraintBottom_toTopOf="@id/ll_bt_clear_game_player_pc"
                                >


                            <LinearLayout
                                android:id="@+id/hz1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/grad_1"
                                android:layout_marginBottom="1dp"
                                app:layout_constraintTop_toTopOf="@id/hz"
                                app:layout_constraintBottom_toTopOf="@id/hz2"
                                >

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/person"
                                    />
                                <ImageView
                                    android:layout_marginStart="5dp"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/krestik_schet_black"
                                    />
                            </LinearLayout>




                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/tv_player_pc_person_x"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="30dp"
                                        android:textColor="@android:color/white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:shadowDx="1"
                                        android:shadowDy="1"
                                        android:shadowColor="@color/shadowColor"
                                        android:shadowRadius="1"
                                        />

                                </LinearLayout>

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:gravity="center"
                                >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/android"
                                />
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/nolik_schet_black"
                                />
                            </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/tv_player_pc_android_0"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="30dp"
                                        android:textColor="@android:color/white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:shadowDx="1"
                                        android:shadowDy="1"
                                        android:shadowColor="@color/shadowColor"
                                        android:shadowRadius="1"
                                        />
                                </LinearLayout>
                        </LinearLayout>


                            <LinearLayout
                                android:id="@+id/hz2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:background="@drawable/grad_2"
                                app:layout_constraintTop_toBottomOf="@id/hz1"
                                app:layout_constraintBottom_toBottomOf="@id/hz">

                                <LinearLayout
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/android" />
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="5dp"
                                        android:src="@drawable/krestik_schet_black" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/tv_player_pc_android_x"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="30dp"
                                        android:textColor="@android:color/white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:shadowDx="1"
                                        android:shadowDy="1"
                                        android:shadowColor="@color/shadowColor"
                                        android:shadowRadius="1"
                                        />

                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    >
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/person"
                                        />
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginStart="5dp"
                                        android:src="@drawable/nolik_schet_black"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_fr_stat_normally_logi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/tv_player_pc_person_0"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="30dp"
                                        android:textColor="@android:color/white"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:shadowDx="1"
                                        android:shadowDy="1"
                                        android:shadowColor="@color/shadowColor"
                                        android:shadowRadius="1"
                                        />
                                </LinearLayout>
                            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_bt_clear_game_player_pc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/cl_frag_stat_player_PC"
                    >
                    <Button
                        android:id="@+id/bt_clear_game_player_pc"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/reset_game_player_pc"
                        android:textAllCaps="false"
                        app:layout_constraintTop_toTopOf="@id/ll_bt_clear_game_player_pc"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_frag_stat_game_1_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/gradient_ll_game_1_1"
        app:layout_constraintTop_toBottomOf="@id/cl_frag_stat_player_PC"
        app:layout_constraintBottom_toTopOf="@id/cl_frag_stat_setting"
        >


            <TextView
                android:id="@+id/tv_pole_3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/stat_game_1_1"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/cl_frag_stat_game_1_1"
                app:layout_constraintBottom_toTopOf="@id/ll_pole_3"
                />


        <LinearLayout
            android:id="@+id/ll_pole_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_pole_3"
            app:layout_constraintBottom_toTopOf="@id/cl_bt_reset_3"
            >

            <LinearLayout
                android:id="@+id/ll_fr_stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/krestik_schet_black"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/nolik_schet_black"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fr_stat_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/tv_game_1_1_X_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowColor="@color/shadowColor"
                    android:shadowRadius="1"
                    />

                <TextView
                    android:id="@+id/tv_game_1_1_0_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowColor="@color/shadowColor"
                    android:shadowRadius="1"
                    />
            </LinearLayout>


        </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bt_reset_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                >
            <Button
                android:id="@+id/bt_clear_game_1_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/reset_game_1_1"
                android:textAllCaps="false"
                app:layout_constraintTop_toTopOf="@id/cl_bt_reset_3"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_frag_stat_setting"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_setting"
        app:layout_constraintTop_toBottomOf="@id/cl_frag_stat_game_1_1"
        app:layout_constraintBottom_toBottomOf="@id/cl_stat_main"
        >




        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:checked="true"
            android:text="@string/switch_alert"
            app:layout_constraintTop_toTopOf="@id/cl_frag_stat_setting"
            app:layout_constraintLeft_toLeftOf="@id/cl_frag_stat_setting"
            app:layout_constraintRight_toRightOf="@id/cl_frag_stat_setting"
            app:layout_constraintBottom_toTopOf="@id/switch_sound"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/switch_sound"
            app:layout_constraintTop_toBottomOf="@id/switch_alert"
            app:layout_constraintLeft_toLeftOf="@id/cl_frag_stat_setting"
            app:layout_constraintRight_toRightOf="@id/cl_frag_stat_setting"
            app:layout_constraintBottom_toBottomOf="@id/cl_frag_stat_setting"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>